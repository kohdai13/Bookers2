<h2>User info</h2>
  <table class="table">
    <tr>
      <td>
        <% if user.profile_image.attached? %>
          <%= image_tag user.profile_image, size: "100x100" %>
        <% else %>
          <%= image_tag 'no_image', size: "63x" %>
        <% end %>
      </td>
      <td></td>
    </tr>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </table>
  <%= link_to edit_user_path(user),class:"btn btn-block btn-outline-secondary p-0 mt-3" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>